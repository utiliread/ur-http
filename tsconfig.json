{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "rootDir": "src",
    "outDir": "dist/esm",
    "lib": ["ES2018", "DOM"],
    "types": ["mocha"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./*.d.ts"
  ]
}
